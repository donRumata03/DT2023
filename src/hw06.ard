-- 9. Докажите, что предикат isEven разрешим.

\func isEven (n : Nat) => \Sigma (k : Nat) (n = 2 * k)

\func dec-n-isEven (n : Nat) : Decide (isEven n) \elim n
  | 0 => yes (0, idp)
  | suc n => \case dec-n-isEven n \with {
    | yes a => no $ {?}
    | no _x => yes $ {?}
  }


\func isEven-dec : DecPred isEven => dec-n-isEven

